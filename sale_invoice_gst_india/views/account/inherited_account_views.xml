<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="invoice_form_inherit_gst_invoice" model="ir.ui.view">
			<field name="name">account.invoice.form.gst.inovoice</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='partner_id']" position="after">
						<field name="gst_number_id" />
						<field name="our_gst_number_id" />
						<field name="contact_number" />
					</xpath>
					<xpath expr="//field[@name='date_invoice']" position="after">
						<field name="transport_mode" />
						<field name="transport_company" />
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
						<field name="hsn_sac_code" />
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
						position="after">
						<field name="total_sale" />
						<field name="gst_discount" />
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
						position="after">
						<field name="cgst_rate" />
						<field name="cgst_amt" />
						<field name="sgst_rate" />
						<field name="sgst_amt" />
						<field name="igst_rate" />
						<field name="igst_amt" />
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
						position="attributes">
						<attribute name="string">Taxable Value</attribute>
					</xpath>

					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']"
						position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
						position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']"
						position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath
						expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
						position="attributes">
						<attribute name="string">Taxable Value</attribute>
					</xpath>

					<xpath
						expr="//field[@name='amount_untaxed']"
						position="attributes">
						<attribute name="string">Total Taxable Value</attribute>
					</xpath>

					<xpath
						expr="//field[@name='amount_untaxed']"
						position="before">
						<field name="total_sale" string="Total Invoice Value" />
						<field name="discount" />
					</xpath>
					<xpath
						expr="//field[@name='amount_untaxed']"
						position="after">
						<field name="cgst_amt" />
						<field name="sgst_amt" />
						<field name="igst_amt" />
						<field name="total_tax_amount" />
						<field name="total_before_bound_off" />
						<field name="round_off" />
					</xpath>
					<xpath
						expr="//field[@name='comment']"
						position="after">
						<field name="amt_in_words" placeholder="Amount in words..."/>
					</xpath>

					<xpath
						expr="//field[@name='amount_tax']"
						position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath
						expr="//field[@name='amount_total']"
						position="attributes">
						<attribute name="string">Grand Total</attribute>
					</xpath>
				</data>
			</field>
		</record>

	</data>
</odoo>